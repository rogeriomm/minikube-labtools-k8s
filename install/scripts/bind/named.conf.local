zone "worldl.xpt" in { // Domain name
    type master; // Primary DNS
    file "/usr/local/etc/bind/zones/db.worldl.xpt"; // Forward lookup file
    allow-update { none; }; // Primary DNS
};

// Minikube DNS resolver to domain *.cluster1.xpt"
zone "cluster1.xpt" in {
   type forward;
   forward only;
   forwarders { 10.112.0.10; };
};

// Minikube DNS resolver to domain *.cluster2.xpt"
zone "cluster2.xpt" in {
   type forward;
   forward only;
   forwarders { 10.96.0.10; };
};

